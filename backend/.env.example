# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sdental

# Flask
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Base URL (for webhook auto-configuration)
BASE_URL=https://your-domain.com

# Claude API
CLAUDE_API_KEY=sk-ant-your-key-here

# Evolution API (default - can be overridden per clinic)
EVOLUTION_API_URL=https://your-evolution-api.com
EVOLUTION_API_KEY=your-evolution-api-key-here

# Webhook authentication (optional - set to secure your webhooks)
WEBHOOK_SECRET=your-webhook-secret-here
# Set to 'true' to disable webhook authentication in development
WEBHOOK_AUTH_DISABLED=false

# Cache and Rate Limiting (optional - uses in-memory by default)
# Use Redis URL for production
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=simple
